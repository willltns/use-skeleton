{
	"name": "@ltns/use-skeleton",
	"version": "0.0.3",
	"description": "A React hook used to display skeleton placeholders where content needs to wait for loading.",
	"keywords": [
		"react",
		"hook",
		"react-hook",
		"skeleton",
		"loading"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/willltns/use-skeleton.git"
	},
	"bugs": {
		"url": "https://github.com/willltns/use-skeleton/issues"
	},
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"main": "./src/index.js",
	"types": "./src/index.d.ts",
	"exports": {
		".": "./src/index.js"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"build": "yarn build:clean && tsc --version && tsc",
		"build:clean": "yarn rimraf -g ./src/**/*.js ./src/**/*.d.ts",
		"cz": "git-cz",
		"prepare": "husky"
	},
	"dependencies": {
		"@types/node": "^20.12.7",
		"@types/react": "^18.2.52",
		"@types/react-dom": "^18.2.6",
		"rimraf": "^5.0.5",
		"typescript": "^5.3.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@commitlint/cz-commitlint": "^19.2.0",
		"commitizen": "^4.3.0",
		"husky": "^9.0.11",
		"inquirer": "^9.2.20",
		"prettier": "^3.2.5"
	},
	"peerDependencies": {
		"react": "^16.8 || ^17 || ^18",
		"react-dom": "^16.8 || ^17 || ^18"
	},
	"resolutions": {
		"string-width": "4.2.3"
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/cz-commitlint"
		}
	}
}
