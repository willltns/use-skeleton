{
	"compilerOptions": {
		"target": "ESNext",
		"jsx": "react-jsx",
		"lib": ["ESNext", "DOM"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"removeComments": true,
		"newLine": "lf",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"rootDir": "./src"
	},
	"include": ["typings.d.ts", "src/**/*.ts"],
	"exclude": ["node_modules/**"]
}
